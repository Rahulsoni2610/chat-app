<div id="user-id" data-user-id=<%=current_user.id%>></div>
<div id="room-id" data-room-id=<%=params[:id]%>></div>

<div class="container-fluid">
  <div class="row">
    <div class="col-3 side-bar-color">
      <%=  render 'form', room: Room.new%>
      <hr class='h-1 bg-light'>
      <% @rooms.each do |room|%>
        <div class="card card-dark m-1 mt-2 rounded-6">
          <div class="d-flex ">
            <div class="card-body">
              <%= link_to room do%>
                <div class="text-light font-weight-bold text-uppercase">
                  <%= room.name %>
                </div>
              <%end%>
            </div>
            <div class='d-flex align-items-center'>
              <%# <button class="btn-hover color-8">BUTTON</button> %>
              <%= link_to 'Delete',room_path(room),class:'btn-hover color-8', data: { turbo_method: :delete}%>
            </div>
          </div>
        </div>
      <%end%>
    </div>
    <div class='col-9 border bg-light'>
      <%if @room.present? %>
        <div class="chat-room">
          <nav class="navbar bg-dark rounded sticky-top">
            <p class="navbar-brand text-light font-weight-bold text-uppercase"><%= @room.name %></p>
          </nav>
          <div id="messages">
            <% @room.messages.each do |message|%>
              <%= render 'messages/message', message: message%>
            <%end%>
          </div>
        </div>
        <div class="chat-box">
          <%= render 'messages/form', message: Message.new, room: @room %>
        </div>
      <%end%>
    </div>
  </div>
</div>
